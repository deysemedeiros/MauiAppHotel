<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppHotel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiAppHotel.Views"
    Title="MauiAppHotel">

    <TabBar>
        <!-- Aba principal -->
        <ShellContent
            Title="Hospedagem"
            ContentTemplate="{DataTemplate views:ContratacaoHospedagem}"
            Route="ContratacaoHospedagem" />

        <!-- Aba Sobre -->
        <ShellContent
            Title="Sobre"
            ContentTemplate="{DataTemplate views:Sobre}"
            Route="Sobre" />
    </TabBar>

</Shell>



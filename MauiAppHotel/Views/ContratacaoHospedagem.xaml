<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="Contratação de Hospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Cálculo da Diária"
                   FontFamily="Kalam"
                   FontSize="40"
                   TextColor="{StaticResource Magenta}" />

            <!-- Adultos e crianças -->
            <Frame Padding="10">
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" />
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding Value}"
                           TextColor="{StaticResource Magenta}"
                           BindingContext="{x:Reference stp_adultos}" />
                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" />
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding Value}"
                           TextColor="{StaticResource Magenta}"
                           BindingContext="{x:Reference stp_criancas}" />
                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                </Grid>
            </Frame>

            <!-- Escolher suíte -->
            <Frame Padding="10" Margin="10">
                <VerticalStackLayout>
                    <Label Text="Escolha sua Suíte"
                           TextTransform="Uppercase"
                           FontSize="Subtitle"
                           TextColor="{StaticResource Magenta}" />
                    <Picker x:Name="pck_quarto"
                            Title="Selecione sua Acomodação"
                            ItemDisplayBinding="{Binding Descricao}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Período -->
            <Frame Padding="10" Margin="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Período da Estadia"
                           TextTransform="Uppercase"
                           FontSize="Subtitle"
                           TextColor="{StaticResource Magenta}" />

                    <Grid ColumnDefinitions="Auto, *">
                        <Label Text="Check-in:" Grid.Column="0" />
                        <DatePicker x:Name="dtpck_checkin"
                                    DateSelected="dtpck_checkin_DateSelected"
                                    Format="dd/MM/yyyy"
                                    Grid.Column="1" />
                    </Grid>

                    <Grid ColumnDefinitions="Auto, *">
                        <Label Text="Check-out:" Grid.Column="0" />
                        <DatePicker x:Name="dtpck_checkout"
                                    Format="dd/MM/yyyy"
                                    Grid.Column="1" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Botão -->
            <Button Text="Avançar"
                    Clicked="Button_Clicked"
                    BackgroundColor="{StaticResource Magenta}"
                    TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
